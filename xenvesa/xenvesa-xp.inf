[Version]
signature  = "$CHICAGO$"
Class      = Display
ClassGUID  = {4D36E968-E325-11CE-BFC1-08002BE10318}
Provider   = %COMPANY% 
DriverVer=05/26/2015,14.0.0.13456
CatalogFile= xenvesa-xp.cat

[DestinationDirs]
DefaultDestDir = 11
xenvesa.Miniport = 12
xenvesa.Display = 11

[SourceDisksNames]
1 = %DiskId%

[SourceDisksFiles]
xenvesa-miniport.sys = 1
xenvesa-display.dll = 1

[Manufacturer]
%COMPANY% = OpenXT,NTamd64.5.1

[OpenXT]
%Xenvesa_Desc% = xenvesa, PCI\VEN_1234&DEV_1111
%Xenvesa_Desc% = xenvesa, PCI\VEN_1234&DEV_1111&SUBSYS_00015853

[OpenXT.NTamd64.5.1]
%Xenvesa_Desc% = xenvesa, PCI\VEN_1234&DEV_1111
%Xenvesa_Desc% = xenvesa, PCI\VEN_1234&DEV_1111&SUBSYS_00015853

[xenvesa]
CopyFiles=xenvesa.Miniport, xenvesa.Display
Reboot

[xenvesa.Miniport]
xenvesa-miniport.sys

[xenvesa.Display]
xenvesa-display.dll

[xenvesa.Services]
AddService = xenvesa-miniport, 0x00000002, xenvesa_Service

[xenvesa_Service]
ServiceType    = 1                  ; SERVICE_KERNEL_DRIVER
StartType      = 3                  ; SERVICE_SYSTEM_START
ErrorControl   = 0                  ; SERVICE_ERROR_IGNORE
LoadOrderGroup = Video
ServiceBinary  = %12%\xenvesa-miniport.sys

[xenvesa.SoftwareSettings]
AddReg = xenvesa_SoftwareDeviceSettings

[xenvesa_SoftwareDeviceSettings]
HKR,, InstalledDisplayDrivers,     %REG_MULTI_SZ%, xenvesa-display
HKR,, VgaCompatible,               %REG_DWORD%,    0
HKR,, VideoDebugLevel,             %REG_DWORD%,    3
HKR,, Acceleration.Level,          %REG_DWORD%,    5
HKR,, VBE_USWC,                    %REG_DWORD%,    1

[Strings]
REG_SZ         = 0x00000000
REG_MULTI_SZ   = 0x00010000
REG_EXPAND_SZ  = 0x00020000
REG_BINARY     = 0x00000001
REG_DWORD      = 0x00010001
SERVICEROOT    = "System\CurrentControlSet\Services"
DELFLG_IN_USE  = 0x00010000

DiskId  = "OpenXT Installation Media"
COMPANY = "OpenXT"
Xenvesa_Desc = "OpenXT Xen Display Driver"
